@model List<Frontend.Models.UserSummary>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<h2 class="mt-3">@ViewData["Title"]</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
else
{
    <!-- Crear usuario -->
    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-2">
                @Html.AntiForgeryToken()
                <div class="col-md-4">
                    <input type="email" name="Email" placeholder="Email" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <input type="password" name="Password" placeholder="Password" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <select name="Role" class="form-select" required>
                        <option value="Admin">Admin</option>
                        <option value="SuperAdmin">SuperAdmin</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">Crear</button>
                </div>
            </form>
        </div>
    </div>
    <!-- Tabla -->
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Usuario</th>
                <th>2FA</th>
                <th style="width: 160px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Email</td>
                        <td>@u.UserName</td>
                        <td>@(u.TwoFactorEnabled ? "Sí" : "No")</td>
                        <td>
                            <form asp-action="Delete" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('¿Eliminar usuario @u.Email?');">
                                    Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No hay usuarios.</td>
                </tr>
            }
        </tbody>
    </table>

}



